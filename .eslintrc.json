{
  "extends": [
    "next/core-web-vitals",
    "plugin:@next/next/recommended",
    "prettier",
    "plugin:storybook/recommended"
  ],
  "plugins": [
    "testing-library",
    "prettier"
  ],
  "overrides": [
    {
      "files": [
        "!*.test.*"
      ],
      "extends": [
        "airbnb-base",
        "prettier"
      ],
      "rules": {
        "quotes": [
          "error",
          "double"
        ]
      }
    },
    {
      "files": [
        "*.test.*"
      ],
      "extends": [
        "plugin:testing-library/react"
      ]
    }
  ],
  "rules": {
    "prettier/prettier": "error",
    "endOfLine": 0
  }
}
